{
  "id": "cortex-api-rest",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "${DOCKER_REGISTRY_PREFIX}knoldususa/cortex-api-rest:${DOCKER_IMAGE_VERSION}",
      "forcePullImage": ${FORCE_PULL_DOCKER},
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0,
          "containerPort": 9000,
          "labels": {
            "VIP_0": "/cortex-api-rest:9000"
          }
        }
      ]
    }
  },
  "env": {
    "HTTP_SEARCH_USER_NAME": "${HTTP_SEARCH_USER_NAME}",
    "RABBIT_HOSTS": "${RABBIT_HOSTS}",
    "RABBIT_USERNAME": "${RABBIT_USERNAME}",
    "ARIES_REST_URL": "${ARIES_REST_URL}",
    "ARIES_REST_VERSION": "${ARIES_REST_VERSION}",
    "ARIES_SEARCH_USER_NAME": "${ARIES_SEARCH_USER_NAME}",
    "ARIES_COMMAND_USER_NAME": "${ARIES_COMMAND_USER_NAME}",
    "ARIES_SEARCH_USER_PASSWORD": {
      "secret": "aries_http_search_user_password"
    },
    "ARIES_COMMAND_USER_PASSWORD": {
      "secret": "aries_http_command_user_password"
    },
    "HTTP_SEARCH_USER_PASSWORD": {
      "secret": "cortex_http_search_user_password"
    },
    "RABBIT_PASSWORD": {
      "secret": "rabbitmq_password"
    }
  },
  "instances": ${SRV_INSTANCES},
  "cpus": ${SRV_CPUS},
  "mem": ${SRV_MEM},
  "constraints": [
      [
        "hostname",
        "UNIQUE"
      ],
      [
        "cluster",
        "UNLIKE",
        "gpu"
      ],
      [
        "cluster",
        "UNLIKE",
        "gpu-jupyter"
      ],
      [
        "cluster",
        "UNLIKE",
        "cpu-jupyter"
      ]
    ],
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/v1/health",
    "portIndex": 0,
    "timeoutSeconds": 10,
    "gracePeriodSeconds": 10,
    "intervalSeconds": 2,
    "maxConsecutiveFailures": 10
  }],
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 0.5
  },
  "secrets": {
    "aries_http_search_user_password": {
      "source": "aries_http_search_user_password"
    },
    "aries_http_command_user_password": {
      "source": "aries_http_command_user_password"
    },
    "cortex_http_search_user_password": {
      "source": "cortex_http_search_user_password"
    },
    "rabbitmq_password": {
      "source": "rabbitmq_password"
    }
  }
}
