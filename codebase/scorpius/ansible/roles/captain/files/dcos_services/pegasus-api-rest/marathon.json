{
  "id": "pegasus-api-rest",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "${DOCKER_REGISTRY_PREFIX}deepcortex/pegasus-api-rest:${DOCKER_IMAGE_VERSION}",
      "forcePullImage": ${FORCE_PULL_DOCKER},
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0,
          "containerPort": 9000,
          "labels": {
            "VIP_0": "/pegasus-api-rest:9000"
          }
        }
      ]
    }
  },
  "env": {
    "HTTP_AUTH_USER_NAME": "${HTTP_AUTH_USER_NAME}",
    "AWS_S3_REGION": "${AWS_S3_REGION}",
    "AWS_S3_ACCCESS_KEY_ID": "${PEGASUS_AWS_S3_ACCESS_KEY_ID}",
    "AWS_S3_SECRET_ACCESS_KEY": "${PEGASUS_AWS_S3_SECRET_ACCESS_KEY}",
    "AWS_REDSHIFT_URL": "${AWS_REDSHIFT_URL}",
    "AWS_REDSHIFT_USER": "${AWS_REDSHIFT_USER}",
    "RABBIT_HOSTS": "${RABBIT_HOSTS}",
    "RABBIT_USERNAME": "${RABBIT_USERNAME}",
    "HTTP_AUTH_USER_PASSWORD": {
      "secret": "pegasus_http_auth_user_password"
    },
    "AWS_REDSHIFT_PASSWORD": {
      "secret": "redshift_password"
    },
    "RABBIT_PASSWORD": {
      "secret": "rabbitmq_password"
    }
  },
  "instances": ${SRV_INSTANCES},
  "cpus": ${SRV_CPUS},
  "mem": ${SRV_MEM},
  "constraints": [
      [
        "hostname",
        "UNIQUE"
      ],
      [
        "cluster",
        "UNLIKE",
        "gpu"
      ],
      [
        "cluster",
        "UNLIKE",
        "gpu-jupyter"
      ],
      [
        "cluster",
        "UNLIKE",
        "cpu-jupyter"
      ]
    ],
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/v1/health",
    "portIndex": 0,
    "timeoutSeconds": 10,
    "gracePeriodSeconds": 10,
    "intervalSeconds": 2,
    "maxConsecutiveFailures": 10
  }],
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 0.5
  },
  "secrets": {
    "pegasus_http_auth_user_password": {
      "source": "pegasus_http_auth_user_password"
    },
    "redshift_password": {
      "source": "redshift_password"
    },
    "rabbitmq_password": {
      "source": "rabbitmq_password"
    }
  }
}
