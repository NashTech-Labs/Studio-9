{
  "id": "aries-api-rest",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "${DOCKER_REGISTRY_PREFIX}knoldususa/aries-api-rest:${DOCKER_IMAGE_VERSION}",
      "forcePullImage": ${FORCE_PULL_DOCKER},
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0,
          "containerPort": 9000,
          "labels": {
            "VIP_0": "/aries-api-rest:9000"
          }
        }
      ]
    }
  },
  "env": {
    "HTTP_SEARCH_USER_NAME": "${HTTP_SEARCH_USER_NAME}",
    "HTTP_COMMAND_USER_NAME": "${HTTP_COMMAND_USER_NAME}",
    "ELASTIC_HOST": "${ELASTIC_HOST}",
    "ELASTIC_PORT": "${ELASTIC_PORT}",
    "ELASTIC_SSL": "${ELASTIC_SSL}",
    "ELASTIC_JOB_INDEX": "${ELASTIC_JOB_INDEX}",
    "ELASTIC_HEARTBEAT_INDEX": "${ELASTIC_HEARTBEAT_INDEX}",
    "HTTP_SEARCH_USER_PASSWORD": {
      "secret": "aries_http_search_user_password"
    },
    "HTTP_COMMAND_USER_PASSWORD": {
      "secret": "aries_http_command_user_password"
     }
  },
  "instances": ${SRV_INSTANCES},
  "cpus": ${SRV_CPUS},
  "mem": ${SRV_MEM},
  "constraints": [
      [
        "hostname",
        "UNIQUE"
      ],
      [
        "cluster",
        "UNLIKE",
        "gpu"
      ],
      [
        "cluster",
        "UNLIKE",
        "gpu-jupyter"
      ],
      [
        "cluster",
        "UNLIKE",
        "cpu-jupyter"
      ]
    ],
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/v1/health",
    "portIndex": 0,
    "timeoutSeconds": 10,
    "gracePeriodSeconds": 10,
    "intervalSeconds": 2,
    "maxConsecutiveFailures": 10
  }],
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 0.5
  },
  "secrets": {
    "aries_http_search_user_password": {
      "source": "aries_http_search_user_password"
    },
    "aries_http_command_user_password": {
      "source": "aries_http_command_user_password"
    }
  }
}
