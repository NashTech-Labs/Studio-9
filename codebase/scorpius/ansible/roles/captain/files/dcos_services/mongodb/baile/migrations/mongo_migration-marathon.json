{
  "id": "baile-mongo-migration",
  "description": "A job that runs to migrate the mongo structure on a schedule",
  "labels": {},
  "run": {
    "cpus": 1,
    "mem": 1000,
    "disk": 0,
    "cmd": "bin/mongo-migration-app",
    "env": {
      "MONGODB_URL": "${MONGODB_URL}",
      "MONGODB_DB_NAME": "${MONGODB_DB_NAME}"
    },
    "placement": {
      "constraints": [
        {
          "attribute": "cluster",
          "operator" : "UNLIKE",
          "value"    : "gpu"
        },
        {
          "attribute": "cluster",
          "operator" : "UNLIKE",
          "value"    : "gpu-jupyter"
        },
        {
          "attribute": "cluster",
          "operator" : "UNLIKE",
          "value"    : "cpu-jupyter"
        }
      ]
    },
    "artifacts": [],
    "maxLaunchDelay": 3600,
    "docker": {
      "image": "${DOCKER_REGISTRY_PREFIX}knoldususa/baile:${BAILE_DOCKER_IMAGE_VERSION}"
    },
    "volumes": [],
    "restart": {
      "policy": "NEVER"
    }
  },
  "schedules": []
}
