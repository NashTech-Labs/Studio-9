{
  "id": "rabbitmq",
  "instances": ${SRV_INSTANCES},
  "cpus": ${SRV_CPUS},
  "mem": ${SRV_MEM},
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ],
    [
      "cluster",
      "UNLIKE",
      "gpu"
    ],
    [
      "cluster",
      "UNLIKE",
      "gpu-jupyter"
    ],
    [
      "cluster",
      "UNLIKE",
      "cpu-jupyter"
    ]
  ],
  "env": {
    "RABBITMQ_DEFAULT_USER": "${USER}",
    "RABBITMQ_ERLANG_COOKIE": "random_erlang_c00kie",
    "RABBITMQ_DEFAULT_PASS": {
      "secret": "rabbitmq_password"
    }
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "${DOCKER_REGISTRY_PREFIX}knoldususa/dcos-rabbitmq:${DOCKER_IMAGE_VERSION}",
      "forcePullImage": ${FORCE_PULL_DOCKER},
      "network": "USER",
      "portMappings": [
        {
          "name": "amqp-0-9-x",
          "protocol": "tcp",
          "containerPort": 5672,
          "hostPort": 0,
          "labels": {
            "VIP_0": "/rabbitmq:5672"
          }
        },
        {
          "name": "rabbitmq-management",
          "protocol": "tcp",
          "containerPort": 15672,
          "hostPort": 0,
          "labels": {
            "VIP_0": "/rabbitmq:15672"
          }
        }
      ]
    },
    "volumes": [
      {
        "containerPath": "/var/lib/rabbitmq",
        "hostPath": "/var/lib/rabbitmq",
        "mode": "RW"
      }
    ]
  },
  "ipAddress": {
      "networkName": "dcos"
  },
  "upgradeStrategy": {
    "minimumHealthCapacity": 0.5,
    "maximumOverCapacity": 0.5
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "rabbitmqctl status"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 40,
      "maxConsecutiveFailures": 3
    }
  ],
  "secrets": {
    "rabbitmq_password": {
      "source": "rabbitmq_password"
    }
  }
}
